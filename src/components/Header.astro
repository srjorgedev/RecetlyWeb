---
const cookies = Astro.request.headers.get("cookie");
let token = null;

if (cookies) {
    token = cookies.split(";").reduce((acc, cookie) => {
        const [key, value] = cookie.trim().split("=");
        if (key === "token") acc = value;
        return acc;
    }, "");
}
---

<header>
    <nav>
        <div class="options">
            <a href="/">Inicio</a>
            <a href="/recipes/">Recetas</a>
        </div>
        {token !== null ? <a href="/user/profile">Perfil</a> : null}
        {token === null ? <a href="/auth/login">Perfil</a> : null}
    </nav>
</header>

<style>
    header {
        border-bottom: 2px solid #e9e9e9;
        padding: 1rem 1rem;
        margin: 0 0 1rem 0;
    }
    nav {
        display: flex;
        flex-direction: row;
        justify-content: space-between;

        & div {
            display: flex;
            gap: 16px;
        }
    }
    a {
        font-size: 2rem;
        text-decoration: none;
        color: black;
    }

    @media (min-width: 768px) {
        header {
            width: 100%;
            padding: 1rem 4rem;
            border-left: 2px solid #e9e9e9;
            border-right: 2px solid #e9e9e9;
            border-bottom: 2px solid #e9e9e9;
        }
        nav {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;

            & div {
                display: flex;
                gap: 8px;
            }
        }
        a {
            font-size: 2.5rem;
            text-decoration: none;
            padding: 0.5rem 2rem;
            color: black;
            font-weight: 500;
        }
    }
</style>
